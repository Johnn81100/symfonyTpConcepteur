{% extends 'base.html.twig' %}
{% block stylesheets %}
   {{ parent() }}
   <link href="{{ asset('asset/style/showArticles.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<div class="card my-5 mx-auto d-flex .align-items-start " style="width: 350px; height: auto;">
    <h3 class="card-header .align-self-center">{{article.titre}} </h3>
    <div class="card-body">
        <h5 class="card-title">n° {{article.id}}, créé le {{article.date | date('d-m-Y H:i:s')}}</h5>
        <h6 class="card-subtitle text-muted"></h6>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200"
        aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice"
        viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
        <rect width="100%" height="100%" fill="#868e96"></rect>
        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
    </svg>
    <div class="card-body">
        <p class="card-text">Ecrit par {{article.user.nom | upper}} {{article.user.prenom}} </p>
        <h6>les différentes catégories :</h6>
        {% for cat in article.categories %}
            <p>{{cat.id}}. {{cat.nom}}</p>
        {% endfor %}
    </div>
    <div class="card-body">
        <p>{{article.contenu}}</p>
        <a href="{{ path('app_article_all') }}"> ⏮️ cliquez pour revenir à la liste des articles </a>
    </div>
    <div class="card-footer text-muted">
    </div>
</div>
{% endblock %}