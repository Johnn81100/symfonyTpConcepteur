{% extends 'base.html.twig' %}
{% block stylesheets %}
   {{ parent() }}
   <link href="{{ asset('asset/style/showArticles.css') }}" rel="stylesheet"/>
{% endblock %}
   
{% block body %}
 <div class="container">
   <h1 class="text-center mx-auto my-5  mh-100" >
		Bienvenue chez cdisclothes
	</h1>
      {% for article in articles %}
         <div class="card mb-3 d-flex .align-items-start " style="width: 350px; height: auto;">
            <h3 class="card-header .align-self-center">{{article.titre}} </h3>
            <div class="card-body">
               <h5 class="card-title">n° {{article.id}}. créé le {{article.date | date('d-m-Y H:i:s')}}</h5>
               <h6 class="card-subtitle text-muted"></h6>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
               <rect width="100%" height="100%" fill="#868e96"></rect>
               <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
            </svg>
            <div class="card-body">
               <p>{{article.contenu}}</p>
            </div>         
            <div class="card-body">
               <a href="{{ path('app_article_id',{'id' : article.id}) }}">cliquez pour plus de détails</a>
            </div>
            <div class="card-footer text-muted">
            </div>
         </div>      
      {% endfor %}
   </div>
  

{% endblock %}